    "@types/i18n": "^0.8.3",
    "@types/mongoose": "^5.0.9",
    "@types/passport": "^0.4.4",
    "@types/passport-local": "^1.0.33",
    "@types/pixi.js": "^4.7.2",
    "node-sass": "^4.8.3"
  }
}
