{
  "name": "us",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server.js",
  "scripts": {
    "test": "jasmine",
    "start": "node dist/server.js",
    "watch-node": "nodemon --ignore spec",
    "watch-ts": "tsc -w",
    "watch-browser": "watchify dist/game/main.js -o dist/public/js/main.js -v",
    "watch-sass": "node-sass src/public/css/main.scss dist/public/css/main.css -w src/public/css --include-path node_modules/foundation-sites/scss/",
    "mongo": "cd ~/Developer; mongod --dbpath=mongodb",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node,Sass,Browser\" -c \"yellow.bold,cyan.bold,blue.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\" \"npm run watch-sass\" \"npm run watch-browser\""
  },
