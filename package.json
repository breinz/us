    "bcrypt-nodejs": "0.0.3",
    "body-parser": "^1.18.2",
    "capitalize": "^1.0.0",
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "express-session": "^1.15.6",
    "express-validator": "^5.1.2",
    "foundation-sites": "^6.4.4-rc1",
    "i18n": "^0.8.3",
    "mongoose": "^5.0.13",
    "passport": "^0.4.0",
    "passport-local": "^1.0.0",
    "pixi.js": "^4.7.3",
    "pug": "^2.0.3",
    "watchify": "^3.11.0"
  },
  "devDependencies": {
    "@types/bcrypt-nodejs": "0.0.30",
